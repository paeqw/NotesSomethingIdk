<Window x:Class="NotesSomethingAAAA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NotesSomethingAAAA"
        mc:Ignorable="d"
        Title="NotesApp" Height="450" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Content="Tytuł" Grid.Row="0"/>
            <TextBox x:Name="TitleTextBox" Grid.Row="1" Margin="5" />
            <Label Content="Wiadomość Notatki" Grid.Row="2"/>
            <TextBox x:Name="NoteTextBox" Grid.Row="3" Margin="5" />
            <Button Content="Save" x:Name="SaveButton" Grid.Row="4" Margin="5,35,5,5" Click="SaveButton_Click"/>
            <Button x:Name="modifyButton" Content="Modify" Margin="6" Grid.Row="5" Click="modifyButton_Click"/>
        </StackPanel>
        <ListBox x:Name="NotesListBox" Grid.Row="1" Margin="5" SelectionChanged="NotesListBox_SelectionChanged"/>
    </Grid>
</Window>